---
import { mastodonIcon, externalIcon } from "./_icons";

interface Props {
  url: string;
}

const { url } = Astro.props;

// Mastodon embed URLs are formed by appending /embed to the post URL.
// Input: https://fosstodon.org/@user/12345
// Embed: https://fosstodon.org/@user/12345/embed
const embedUrl = url.replace(/\/$/, "") + "/embed";

// Extract instance domain for display
const instanceDomain = new URL(url).hostname;
---

<figure class="not-prose my-6 flex justify-center">
  <div class="w-full max-w-[550px]">
    <div class="overflow-hidden rounded-xl border border-zinc-200 bg-zinc-50 dark:border-zinc-700 dark:bg-zinc-800/50">
      {/* Platform header */}
      <div class="flex items-center gap-2 border-b border-zinc-200 px-4 py-2.5 dark:border-zinc-700">
        <span class="text-[#6364FF]" set:html={mastodonIcon} />
        <span class="text-sm font-medium text-zinc-600 dark:text-zinc-300">Mastodon</span>
        <span class="text-xs text-zinc-400 dark:text-zinc-500">{instanceDomain}</span>
      </div>

      {/* Embed iframe */}
      <div class="relative">
        <iframe
          src={embedUrl}
          width="100%"
          height="300"
          allowfullscreen
          loading="lazy"
          title="Mastodon post"
          class="block w-full border-0"
          style="overflow: hidden;"
          sandbox="allow-scripts allow-same-origin allow-popups"
        ></iframe>
      </div>

      {/* Fallback link */}
      <div class="border-t border-zinc-200 px-4 py-2 dark:border-zinc-700">
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1.5 text-sm text-zinc-500 transition-colors hover:text-[#6364FF] dark:text-zinc-400 dark:hover:text-[#8b8cff]"
        >
          View on Mastodon
          <span set:html={externalIcon} />
        </a>
      </div>
    </div>
  </div>
</figure>
