---
import { xIcon, externalIcon } from "./_icons";

interface Props {
  url: string;
}

const { url } = Astro.props;

// Extract tweet ID from the URL.
// Supports: https://x.com/user/status/123 and https://twitter.com/user/status/123
const tweetIdMatch = url.match(/\/status\/(\d+)/);
const tweetId = tweetIdMatch?.[1] ?? "";

// Extract the username for display
const usernameMatch = url.match(/(?:x\.com|twitter\.com)\/([^/]+)\/status/);
const username = usernameMatch?.[1] ?? "";

// Use syndication embed which renders a static card without tracking scripts.
// This approach loads a server-rendered tweet card from Twitter/X CDN.
const embedUrl = `https://platform.twitter.com/embed/Tweet.html?id=${tweetId}&theme=light&dnt=true`;
---

<figure class="not-prose my-6 flex justify-center">
  <div class="w-full max-w-[550px]">
    <div class="overflow-hidden rounded-xl border border-zinc-200 bg-zinc-50 dark:border-zinc-700 dark:bg-zinc-800/50">
      {/* Platform header */}
      <div class="flex items-center gap-2 border-b border-zinc-200 px-4 py-2.5 dark:border-zinc-700">
        <span class="text-zinc-800 dark:text-zinc-200" set:html={xIcon} />
        <span class="text-sm font-medium text-zinc-600 dark:text-zinc-300">
          {username ? `@${username}` : "X (Twitter)"}
        </span>
      </div>

      {/* Embed iframe using syndication (privacy-respecting, no widget.js needed) */}
      <div class="relative">
        <iframe
          src={embedUrl}
          width="100%"
          height="350"
          allowfullscreen
          loading="lazy"
          title={`Post by @${username || "user"} on X`}
          class="block w-full border-0"
          style="overflow: hidden;"
          sandbox="allow-scripts allow-same-origin allow-popups"
        ></iframe>
      </div>

      {/* Fallback link */}
      <div class="border-t border-zinc-200 px-4 py-2 dark:border-zinc-700">
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1.5 text-sm text-zinc-500 transition-colors hover:text-zinc-800 dark:text-zinc-400 dark:hover:text-zinc-200"
        >
          View on X
          <span set:html={externalIcon} />
        </a>
      </div>
    </div>
  </div>
</figure>
