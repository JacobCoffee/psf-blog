---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../assets/styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  fullWidth?: boolean;
  editPath?: string;
}

const { title, description, image, fullWidth = false, editPath } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class="flex min-h-screen flex-col bg-[#f8faf8] text-[#1a2e1f] dark:bg-[#0d1912] dark:text-[#dce8e0]">
    <Header />
    <main class:list={[
      "flex-1",
      !fullWidth && "mx-auto w-full max-w-6xl px-6 py-10",
    ]}>
      <slot />
    </main>
    <Footer editPath={editPath} />
    <button
      id="shortcut-hint"
      class="shortcut-hint-btn"
      aria-label="Keyboard shortcuts"
      title="Keyboard shortcuts (?)"
    >?</button>
    <script>
      document.getElementById("shortcut-hint")?.addEventListener("click", () => {
        document.dispatchEvent(new CustomEvent("show-keyboard-shortcuts"));
      });
    </script>
  </body>
</html>
